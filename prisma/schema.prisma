generator client {
  provider   = "prisma-client"
  output     = "../generated/prisma"
  engineType = "client"
}

datasource db {
  provider = "postgresql"
}

model Session {
  id        String   @id
  expiresAt DateTime
  user      User     @relation(fields: [userId], references: [id])
  userId    String

  @@map("session")
}

model User {
  id           String    @id @default(uuid())
  username     String    @unique
  email        String    @unique
  passwordHash String
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  active       Boolean   @default(false)
  role         Role      @default(USER)
  profile      Profile?
  sessions     Session[]

  @@unique([id, username])
  @@map("user")
}

model Profile {
  id String @id @default(uuid())

  userId    String  @unique
  name      String  @unique
  avatar    String? @db.Text
  firstName String?
  lastName  String?
  phone     String?
  bio       String? @db.Text
  user      User    @relation(fields: [userId, name], references: [id, username], onUpdate: Cascade, onDelete: Cascade)

  @@unique([userId, name])
  @@map("profile")
}

enum Role {
  USER
  REDACTEUR
  ADMIN
}
